				<top>20</top>
				<width>234</width>
				<height>350</height>
				<aspectratio>keep</aspectratio>
				<texture background="true">$VAR[PosterThumbVar]</texture>
			</control>
			<control type="label">
				<top>15</top>
				<left>290</left>
				<width>1200</width>
				<height>70</height>
				<font>font35_title</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<scroll>true</scroll>
				<visible>!ListItem.IsCollection</visible>
			</control>
			<control type="label">
				<top>255</top>
				<left>290</left>
				<width>1580</width>
				<height>70</height>
				<font>font80caps_title</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<visible>ListItem.IsCollection</visible>
			</control>
			<control type="label">
				<top>82</top>
				<left>290</left>
				<width>1200</width>
				<height>65</height>
				<font>font16</font>
				<textcolor>grey</textcolor>
				<label>$INFO[ListItem.Year,, • ]$INFO[ListItem.RatingAndVotes,, • ]$INFO[ListItem.Duration,, $LOCALIZE[12391]]$INFO[ListItem.Endtime, • $LOCALIZE[19127]: ,]</label>
				<visible>!ListItem.IsCollection + !Container.Content(tvshows)</visible>
			</control>
			<control type="label">
				<top>82</top>
				<left>290</left>
				<width>1200</width>
				<height>65</height>
				<font>font16</font>
				<textcolor>grey</textcolor>
				<label>$LOCALIZE[20360]: $INFO[ListItem.Property(TotalEpisodes)] [COLOR $VAR[BigInfoUnWatchedEpColor]]$INFO[ListItem.Property(UnWatchedEpisodes), ($LOCALIZE[16101]: ,)][/COLOR]</label>

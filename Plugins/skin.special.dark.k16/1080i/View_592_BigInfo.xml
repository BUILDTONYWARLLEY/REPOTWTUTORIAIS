			</control>
			<control type="textbox">
				<top>150</top>
				<left>290</left>
				<width>1600</width>
				<height>205</height>
				<font>font14_textbox</font>
				<textcolor>$VAR[ThemeLabelColor]</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
				<include>DefaultButtonsValues</include>
				<label>$INFO[ListItem.Tagline,, - ][COLOR grey]$VAR[VideoPlotVar2][/COLOR]</label>
			</control>
			<control type="image">
				<left>1530</left>
				<top>92</top>
				<width>400</width>
				<height>45</height>
				<aspectratio>keep</aspectratio>
				<texture>IMDb.png</texture>
				<visible>!IsEmpty(ListItem.Top250)</visible>
			</control>
			<control type="Label">
				<visible>!IsEmpty(ListItem.Top250)</visible>
				<left>1790</left>
				<top>90</top>
				<width>125</width>
				<height>45</height>
				<align>left</align>
				<label>$INFO[ListItem.Top250,#]</label>
				<font>font16_title_bold</font>
				<shadowcolor>shadow</shadowcolor>
				<textcolor>fffeec900</textcolor>
			</control>
		</control>
		<control type="group">
			<visible>Container.Content(artists)</visible>
			<control type="image">
				<left>30</left>
				<top>30</top>
				<width>340</width>
				<height>340</height>
				<aspectratio aligny="center" align="center">scale</aspectratio>
				<texture background="true">$INFO[ListItem.Thumb]</texture>
			</control>
			<control type="label">
				<top>15</top>
				<left>403</left>
				<width>1200</width>
				<height>70</height>
				<font>font35_title</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[ListItem.Label]</label>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<top>82</top>
				<left>403</left>
				<width>1200</width>
				<height>65</height>
				<font>font28_title</font>
				<textcolor>grey</textcolor>
				<label>[COLOR $VAR[ThemeLabelColor]]$INFO[ListItem.Property(Artist_Genre)][/COLOR]</label>
			</control>
			<control type="textbox">
				<top>150</top>
				<left>403</left>
				<width>1487</width>
				<height>220</height>
				<font>font14_textbox</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
				<include>DefaultButtonsValues</include>
				<label>$INFO[ListItem.Property(Artist_Description)]</label>
			</control>
		</control>
	</include>
	<include name="View_592_BigInfo">
		<control type="group">
			<visible>Control.IsVisible(592) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="fixedlist" id="592">
				<left>0</left>
				<top>665</top>
				<width>1920</width>
				<height>400</height>
				<onleft>592</onleft>
				<onright>592</onright>
				<onup>SetProperty(MediaMenu,True,home)</onup>
				<onup>SetFocus(9050)</onup>
				<ondown>4400</ondown>
				<preloaditems>2</preloaditems>
				<focusposition>0</focusposition>
				<viewtype label="$LOCALIZE[31250]">list</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies) | Container.Content(artists)</visible>
				<orientation>horizontal</orientation>
				<itemlayout width="1920" height="400">
					<include>BigInfo</include>
				</itemlayout>
				<focusedlayout width="1920" height="400">
					<include>BigInfo</include>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>
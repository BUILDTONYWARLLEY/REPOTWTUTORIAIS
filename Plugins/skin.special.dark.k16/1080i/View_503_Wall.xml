<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Wall -->
	<include name="View_503_Wall">
		<control type="group">
			<visible>Control.IsVisible(503) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="panel" id="503">
				<left>0</left>
				<width>FullScreenWidth</width>
				<height>1080</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>503</onup>
				<ondown>503</ondown>
				<orientation>vertical</orientation>
				<viewtype label="$LOCALIZE[31245]">icon</viewtype>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(albums) | Container.Content(addons) | [Window.IsActive(musiclibrary) + Container.Content(files)]</visible>
				<itemlayout width="320" height="440" condition="![Container.Content(albums) | Container.Content(addons)] + ![Window.IsActive(musiclibrary) + Container.Content(files)]">
					<control type="group">
						<left>11</left>
						<top>80</top>
						<control type="image">
							<left>0</left>
							<width>300</width>
							<height>430</height>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<top>25</top>
							<width>85</width>
							<height>80</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">oscars.png</texture>
							<visible>Skin.HasSetting(oscars503) + [SubString(ListItem.FileName,.oscars) | StringCompare(Container.FolderPath,special://profile/playlists/video/BestPicture.xsp)]</visible>
						</control>
						<control type="image">
							<left>207</left>
							<top>19</top>
							<width>80</width>
							<height>80</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
							<visible>[!IsEmpty(Skin.String(503.Movies.DisableOverlay)) + Container.Content(movies)] | [!IsEmpty(Skin.String(503.TV.DisableOverlay)) + Container.Content(tvshows)] | [!IsEmpty(Skin.String(503.Seasons.DisableOverlay)) + Container.Content(seasons)]</visible>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<left>0</left>
							<width>300</width>
							<height>430</height>
							<texture border="1" colordiffuse="80FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>-33</left>
							<top>-20</top>
							<width>333</width>
							<height>455</height>
							<texture background="true" fallback="$VAR[CaseTypePathVar]p.png" colordiffuse="CCFFFFFF">$VAR[CaseTypePathVar]$VAR[GlobalCaseVar]</texture>
							<visible>Skin.HasSetting(Enable.Wall.Cases)</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="440" condition="![Container.Content(albums) | Container.Content(addons)] + ![Window.IsActive(musiclibrary) + Container.Content(files)]">
					<control type="group">
						<left>11</left>
						<top>80</top>
						<animation effect="zoom" center="160,310" start="100" end="110" time="420" tween="back" reversible="false">Focus</animation>
						<control type="image">
							<left>0</left>
							<width>300</width>
							<height>430</height>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<top>25</top>
							<width>85</width>
							<height>80</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">oscars.png</texture>
							<visible>Skin.HasSetting(oscars503) + [SubString(ListItem.FileName,.oscars) | StringCompare(Container.FolderPath,special://profile/playlists/video/BestPicture.xsp)]</visible>
						</control>
						<control type="image">
							<left>207</left>
							<top>19</top>
							<width>80</width>
							<height>80</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<bordersize>1</bordersize>
							<visible>[!IsEmpty(Skin.String(503.Movies.DisableOverlay)) + Container.Content(movies)] | [!IsEmpty(Skin.String(503.TV.DisableOverlay)) + Container.Content(tvshows)] | [!IsEmpty(Skin.String(503.Seasons.DisableOverlay)) + Container.Content(seasons)]</visible>
						</control>
						<control type="group">
							<left>30</left>
							<top>45</top>
							<include condition="Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
						</control>
						<control type="image">
							<left>0</left>
							<width>300</width>
							<height>430</height>
							<texture border="1" colordiffuse="80FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="200" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="200" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>-33</left>
							<top>-20</top>
							<width>333</width>
							<height>455</height>
							<texture background="true" fallback="$VAR[CaseTypePathVar]p.png">$VAR[CaseTypePathVar]$VAR[GlobalCaseVar]</texture>
							<visible>Skin.HasSetting(Enable.Wall.Cases)</visible>
						</control>
					</control>
				</focusedlayout>
				<itemlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)] | [Window.IsActive(musiclibrary) + Container.Content(files)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<bordersize>20</bordersize>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="320" height="320" condition="[Container.Content(albums) | Container.Content(addons)] | [Window.IsActive(musiclibrary) + Container.Content(files)]">
					<control type="group">
						<top>60</top>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<aspectratio scalediffuse="false">scale</aspectratio>
							<texture background="true">$VAR[PosterThumbVar]</texture>
							<bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
							<bordersize>20</bordersize>
						</control>
						<control type="image">
							<top>4</top>
							<left>4</left>
							<width>312</width>
							<height>312</height>
							<texture colordiffuse="$VAR[ThemeLabelColor]" border="10">thumbs/thumbnail_focused.png</texture>
							<bordersize>8</bordersize>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">UnFocus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">Focus</animation>
						</control>
						<control type="image">
							<left>200</left>
							<top>19</top>
							<width>100</width>
							<height>100</height>
							<texture>overlays/addons/enabled.png</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
							<visible>StringCompare(ListItem.Label2,$LOCALIZE[449])</visible>
							<bordersize>1</bordersize>
						</control>
						<control type="image">
							<left>0</left>
							<width>320</width>
							<height>320</height>
							<texture border="1" colordiffuse="66FFFFFF">black.png</texture>
							<animation effect="fade" start="100" end="0" time="150" reversible="false">Focus</animation>
							<animation effect="fade" start="0" end="100" time="150" reversible="false">UnFocus</animation>
							<bordersize>20</bordersize>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>100</top>
				<width>14</width>
				<height>900</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="image">
				<top>770</top>
				<width>FullScreenWidth</width>
				<height>320</height>
				<texture border="1">logo_back.png</texture>
				<visible>[!Skin.HasSetting(Disable.Wall.MovieInfo) + Container.Content(movies)] | [!Skin.HasSetting(Disable.Wall.TVInfo) + Container.Content(tvshows)] | [Skin.HasSetting(Enable.Wall.FloorInfo.seasons) + Container.Content(seasons)] | [Skin.HasSetting(Enable.Wall.AlbumLabels) + Container.Content(albums)] | [!StringCompare(Skin.String(503.Movies.ViewFlags),$LOCALIZE[1223]) + Container.Content(movies)] | [!StringCompare(Skin.String(503.TV.ViewFlags),$LOCALIZE[1223]) + Container.Content(tvshows)] | [!IsEmpty(Skin.String(503.Seasons.MediaflagsLayout)) + Container.Content(seasons)] | Skin.HasSetting(Enable.Wall.Logo)</visible>
			</control>
		</control>
	</include>
</includes>